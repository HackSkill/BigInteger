######################
# Test Functions:
######################

# ----------------------------
  isZero: ->
# ----------------------------
    return (@getSign() is 0)

# ----------------------------
  isPositive: ->
# ----------------------------
    return (@getSign() is 1)

# ----------------------------
  isNegative: ->
# ----------------------------
    return not @isPositive()

# ----------------------------
  isUnit: ->
# ----------------------------
    return @getDigitCount is 1 and @getDigits()[0] is 1

# ----------------------------
  isOne: ->
# ----------------------------
    return @isUnit and @getSign is 1

# ----------------------------
  isMinusOne: ->
# ----------------------------
    return @isUnit and @getSign is -1

# ----------------------------
  isEven: ->
# ----------------------------
    return @getDigits()[0] % 2 is 0

# ----------------------------
  isOdd: ->
# ----------------------------
    return not isEven()
